               FontSize="25"
               FontFamily="Times New Roman"
               Content="" 
               HorizontalAlignment="Left"
               Margin="49,37,0,0"
               VerticalAlignment="Top"/>
        <Image x:Name="ImageUser" HorizontalAlignment="Left" Height="136" Margin="343,83,0,0" VerticalAlignment="Top" Width="119"/>
